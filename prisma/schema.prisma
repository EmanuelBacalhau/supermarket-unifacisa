generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Employee {
  id        String   @id @default(cuid()) @map("_id")
  name      String
  birthday  DateTime
  cpf       String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("employees")
}

model Client {
  id       String   @id @default(cuid()) @map("_id")
  name     String
  birthday DateTime
  cpf      String   @unique
  email    String   @unique
  password String

  orders     Order[]
  promotions PromotionUser[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("clients")
}

model Category {
  id        String   @id @default(cuid()) @map("_id")
  name      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updateAt  DateTime @default(now()) @updatedAt @map("updated_at")

  products Product[]

  @@map("categories")
}

model Product {
  id                String   @id @default(cuid()) @map("_id")
  name              String
  price             Float
  description       String
  categoryId        String   @map("category_id")
  barCode           String   @unique @map("bar_code")
  manufacturingDate DateTime @map("manufacturing_date")
  expirationDate    DateTime @map("expirion_date")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @default(now()) @updatedAt @map("updated_at")

  orders     Order[]
  promotions PromotionUser[]

  category Category @relation(fields: [categoryId], references: [id])

  @@map("products")
}

model Order {
  id        String   @id @default(cuid()) @map("_id")
  clientId  String   @map("client_id")
  productId String   @map("product_id")
  amount    Int
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  client  Client  @relation(fields: [clientId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@map("orders")
}

model PromotionUser {
  id          String   @id @default(cuid()) @map("_id")
  name        String?
  percentagem Int
  startDate   DateTime
  endDate     DateTime

  productId String @map("product_id")
  clientId  String @map("client_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  client  Client  @relation(fields: [clientId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@map("promotions_to_users")
}
